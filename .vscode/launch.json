{
	"configurations": [
		{
			"command": "yarn start",
			"name": "yarn start",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"command": "yarn dev",
			"name": "BushBot",
			"request": "launch",
			"type": "pwa-node",
			"runtimeArgs": [
				"--experimental-specifier-resolution=node"
			],
			"skipFiles": [
				"<node_internals>/**",
				// "**/Yarn/**",
				"**/.pnp.js",
				"**/.yarn/releases/**"
			],
			"outFiles": [
				"${workspaceRoot}/dist/**/*.js",
			],
			"sourceMaps": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
			]
		}
	]
}